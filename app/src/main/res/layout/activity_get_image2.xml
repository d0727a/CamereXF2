<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetImageActivity2">

    <Button
        android:id="@+id/button8"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#7450F6"
        android:textColor="#FFFFFF"
        android:text="1단계"
        app:layout_constraintStart_toStartOf="@+id/iv_main"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/button9"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#7450F6"
        android:textColor="#FFFFFF"
        android:text="2단계"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button10"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:textColor="#FFFFFF"
        android:text="3단계"
        app:layout_constraintEnd_toEndOf="@+id/iv_main"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="24dp"
        android:background="#000000"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        app:srcCompat="@drawable/example"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#7450F6"
        android:textColor="#FFFFFF"
        android:text="카메라"
        app:layout_constraintStart_toStartOf="@+id/btn_move"
        app:layout_constraintTop_toBottomOf="@+id/iv_main"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_gallery"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#7450F6"
        android:textColor="#FFFFFF"
        android:text="갤러리"
        app:layout_constraintEnd_toEndOf="@+id/btn_move"
        app:layout_constraintTop_toBottomOf="@+id/iv_main"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_move"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#7450F6"
        android:textColor="#FFFFFF"
        android:text="학습하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <TextView
        android:id="@+id/explanation_text"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="#B5393939"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text=" 1. 단색 배경에서 촬영해주세요.\n 2. 정면을 보고 촬영해주세요.\n 3. 수어를 하는 손만 나오도록 촬영해주세요."
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/iv_main"
        app:layout_constraintEnd_toEndOf="@+id/iv_main"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/iv_main" />

</androidx.constraintlayout.widget.ConstraintLayout>